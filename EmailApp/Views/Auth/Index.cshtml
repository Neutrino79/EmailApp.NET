@model EmailApp.Models.Entites.User

@{
    ViewData["Title"] = "Sign Up";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 12px;">
        <h3 class="text-center mb-4">Create an Account</h3>

        <form asp-controller="Auth" asp-action="Index" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Full Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter your full name" required>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- ✅ Subscribe Checkbox -->
            <div class="mb-3 form-check">
                <input asp-for="IsSubscribed" type="checkbox" class="form-check-input">
                <label asp-for="IsSubscribed" class="form-check-label">Subscribe to daily emails</label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Sign Up</button>
        </form>

        <p class="text-center mt-3">
            Already have an account? <a href="/Auth/Login" class="text-primary">Login</a>
        </p>
    </div>
</div>

<!-- Bootstrap Validation -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
