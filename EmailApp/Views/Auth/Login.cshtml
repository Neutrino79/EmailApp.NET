@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg p-4">
                <h3 class="text-center">Login</h3>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }

                <form asp-action="Login" method="post">
                    <div class="form-group">
                        <label for="role">Login As</label>
                        <select id="role" name="role" class="form-control" required onchange="toggleInputField()">
                            <option value="User" selected>User</option>
                            <option value="Admin">Admin</option>
                        </select>
                    </div>

                    <div class="form-group mt-3">
                        <label id="labelEmailUsername">Email</label>
                        <input type="text" id="emailOrUsername" name="emailOrUsername" class="form-control" required placeholder="Enter your email">
                    </div>

                    <div class="form-group mt-3">
                        <label>Password</label>
                        <input type="password" name="password" class="form-control" required placeholder="Enter your password">
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mt-3">Login</button>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger mt-3">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        </div>
                    }

                    <div class="text-center mt-3">
                        <a asp-action="Index" asp-controller="Auth">Don't have an account? Sign Up</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleInputField() {
        var role = document.getElementById("role").value;
        var label = document.getElementById("labelEmailUsername");
        var input = document.getElementById("emailOrUsername");

        if (role === "Admin") {
            label.textContent = "Username";
            input.placeholder = "Enter your username";
        } else {
            label.textContent = "Email";
            input.placeholder = "Enter your email";
        }
    }
</script>
