@model EmailApp.Models.Entites.User

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center">User Profile</h2>

        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p>
            <strong>Subscription Status:</strong>
            <span class="badge @(Model.IsSubscribed ? "bg-success" : "bg-danger")">
                @(Model.IsSubscribed ? "Subscribed" : "Not Subscribed")
            </span>
        </p>

        <form asp-controller="User" asp-action="ToggleSubscription" method="post">
            <button type="submit" class="btn @(Model.IsSubscribed ? "btn-danger" : "btn-success")">
                @(Model.IsSubscribed ? "Unsubscribe" : "Subscribe")
            </button>
        </form>
    </div>
</div>
